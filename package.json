{
  "name": "swagger-combinator",
  "description": "Combines separate OpenAPI fragments into single specification file",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "prettier": "prettier --write \"{{lib,scripts}/**/*.js,jest.config.js\"}",
    "test:ci": "npm run lint && npm run test:code-coverage",
    "test:code-coverage": "jest --runInBand --config jest.config.js"
  },
  "dependencies": {
    "glob": "^7.1.3",
    "js-yaml": "^3.13.0",
    "lodash": "^4.17.11",
    "validation-utils": "^2.8.0"
  },
  "optionalDependencies": {
    "json-schema-to-openapi-schema": "^0.3.0",
    "objection-swagger": "^3.1.1"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^24.6.0",
    "prettier": "1.16.4",
    "sinon": "^7.3.1"
  },
  "keywords": [
    "swagger",
    "openapi"
  ]
}
